<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:tools="http://schemas.android.com/tools"
  package="com.example.armazem">

  <application
    android:allowBackup="true"
    android:dataExtractionRules="@xml/data_extraction_rules"
    android:fullBackupContent="@xml/backup_rules"
    android:icon="@drawable/ic_app_icone"
    android:label="@string/app_name"
    android:roundIcon="@drawable/ic_app_icone"
    android:supportsRtl="true"
    android:theme="@style/Theme.Armazem"
    tools:targetApi="31">
    <activity
      android:name=".StorageScreenActivity"
      android:exported="false"
      android:theme="@style/Theme.Design.Light.NoActionBar" />
    <activity
      android:name=".InventoryScreenActivity"
      android:exported="false"
      android:theme="@style/Theme.Design.Light.NoActionBar" />
    <activity
      android:name=".SearchScreenActivity"
      android:exported="true"
      android:theme="@style/Theme.Design.Light.NoActionBar" />
    <activity
      android:name=".SeparationScreenActivity"
      android:exported="false"
      android:theme="@style/Theme.Design.Light.NoActionBar" />
    <activity
      android:name=".HomeScreenActivity"
      android:exported="false"
      android:theme="@style/Theme.Design.Light.NoActionBar" />
    <activity
      android:name=".LoginScreenActivity"
      android:exported="false"
      android:theme="@style/Theme.Design.Light.NoActionBar" />
    <activity
      android:name=".SplashScreenActivity"
      android:exported="true"
      android:theme="@style/Theme.Design.Light.NoActionBar">
      <intent-filter>
        <action android:name="android.intent.action.MAIN" />

        <category android:name="android.intent.category.LAUNCHER" />
      </intent-filter>
    </activity>

    <meta-data
      android:name="preloaded_fonts"
      android:resource="@array/preloaded_fonts" />
  </application>

</manifest>